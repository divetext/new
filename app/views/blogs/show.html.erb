<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-xm-12">
    <div class="thumbnail">
      <div class="caption">
        
        <div class="photo center">
          <%= profile_img @blog.user %>
        </div>
        
        <p>
          ID：<%= @blog.user_id %><br>
          NAME：<%= @blog.user.name %></p>
        <p>
          
        <strong>Title:</strong>
        <%= @blog.title %>
        </p>
        
        <p>
          <strong>Content:</strong>
          <%= @blog.content %>
      </p>
          
      </div>
    </div>
    
   <p>コメント一覧</p>
   
    <div id="comments_area">
      <%= render partial: 'comments/index', locals: { comments: @comments, blog: @blog } %>
    </div>
    
    <%= render partial: 'comments/form', locals: { comment: @comment, blog: @blog } %>
    
    <% if current_user.id == @blog.user_id %>
      <%= link_to '編集', edit_blog_path(@blog) %> |
    <% end %>
    <%= link_to '戻る', blogs_path %>
  </div>
</div>

