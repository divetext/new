<p id="notice"><%= notice %></p>
<h1>Listing Blogs</h1>

<%= link_to 'New Blog', new_blog_path %>

<% @blogs.each do |blog| %>

<div class="row">
  <div class="col-xm-12">
    <div class="thumbnail">
      <div class="caption">
        <h3><%= link_to blog.title, blog %></h3>
        <p><%= blog.content %></p>
        <p><%= blog.user.id %>
          <%= blog.user.name %></p>
        <p><%= link_to 'Edit', edit_blog_path(blog), class: "btn btn-primary" %> <%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>
</div>

<% end %>

